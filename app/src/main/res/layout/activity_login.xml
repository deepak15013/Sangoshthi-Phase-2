        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="@string/login_signin"-->
        <!--android:layout_marginTop="50dp"-->
        <!--android:layout_below="@+id/phone"-->
        <!--android:layout_centerHorizontal="true"/>-->

</RelativeLayout>
